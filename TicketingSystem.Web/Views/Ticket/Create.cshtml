@model CreateTicketViewModel

@{
	ViewData["Title"] = "Create Ticket";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
	<div class="form-row">
		<div class="form-group col-md-12">
			<label asp-for="TicketTitle"></label>
			<input asp-for="TicketTitle" class="form-control">
		</div>
		<div class="form-group col-md-6">
			<label asp-for="ProjectName"></label>
			<select asp-for="ProjectName" class="form-control">
				<option selected>Select Project</option>
				@foreach (var name in Model.ProjectNames)
				{
					<option>@name</option>
				}
			</select>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="TicketTypes"></label>
			<select asp-for="TicketTypes" class="form-control">
				<option selected>Select Ticket Type</option>
				<option>Bug report</option>
				<option>Feature request</option>
				<option>Assistace request</option>
				<option>Other</option>
			</select>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="TicketStates"></label>
			<select asp-for="TicketStates" class="form-control">
				<option selected>Select Ticket States</option>
				<option>New</option>
				<option>Draft</option>
				<option>Worked on</option>
				<option>Done</option>
			</select>
		</div>
	</div>
	<div class="form-group col-md-6">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" rows="5" class="form-control" placeholder="Description"></textarea>
	</div>
	<div class="form-group col-md-6">
		<label asp-for="FileContent">File</label>
		<input asp-for="FileContent" type="file" class="form-control-file" id="file">
	</div>
	<div class="form-group col-md-6">
		<button type="submit" class="btn btn-primary">Create</button>
	</div>
</form>