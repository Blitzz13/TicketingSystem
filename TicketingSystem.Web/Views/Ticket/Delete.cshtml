@model TicketFormViewModel
@{
	ViewData["Title"] = "Delete Ticket";
}

<h2>@ViewData["Title"]</h2>

<div class="row animated flipInX">
	<div class="col-sm-6 col-md-6">
		<div class="alert-message alert-message-danger">
			<h4>
				@ViewData["Title"]
			</h4>
			<p>
				Do you want to delete this ticket?
			</p>
			<form method="post" action="/Ticket/Delete/@Model.TicketId">
				<input type="submit" class="btn btn-success" value="Yes" />
				<a asp-controller="Ticket" asp-action="ListTickets" class="btn btn-danger">No</a>
			</form>
		</div>
	</div>
</div>