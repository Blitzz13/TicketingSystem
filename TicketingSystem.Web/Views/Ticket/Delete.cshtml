@model int
@{
	ViewData["Title"] = "Delete Ticket";
}

<h2>@ViewData["Title"]</h2>

<div class="row animated flipInX">
	<div class="col-sm-6 col-md-6">
		<div class="alert-message alert-message-danger">
			<h4>
				@ViewData["Title"]
			</h4>
			<p>
				Do you want to delete this ticket?
			</p>
		</div>
		<a asp-controller="Account" asp-action="UsersToProcess" class="btn btn-warning">No</a>
		<form method="post" action="/Ticket/Delete/@Model">
			<input type="submit" class="btn btn-success" value="Yes"/>
		</form>
	</div>
</div>