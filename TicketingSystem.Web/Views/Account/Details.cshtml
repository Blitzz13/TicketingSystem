@model DetailsViewModel
@{
	ViewData["Title"] = "Account Details";
}

<h2>@ViewData["Title"]</h2>


@if (User.IsInRole("Administrator"))
{
	<div class="row">
		<form method="post"
			  action="/Account/Edit/@Model.Id">
			<div class="col-md-4">
				<div class="form-group animated fadeInLeft">
					<label asp-for="Username">
					</label>
					<input disabled asp-for="Username"
						   class="form-control" />
				</div>
				<div class="form-group animated fadeInRight">
					<label asp-for="Email">
					</label>
					<input asp-for="Email"
						   class="form-control" />
				</div>
				<div class="form-group animated fadeInLeft">
					<label asp-for="FirstName">
					</label>
					<input asp-for="FirstName"
						   class="form-control" />
				</div>
				<div class="form-group animated fadeInRight">
					<label asp-for="LastName">
					</label>
					<input asp-for="LastName"
						   class="form-control" />
				</div>
				@if (User.Identity.Name != Model.Username)
				{
					<div class="form-group animated fadeInLeft">
						<label asp-for="Role">
						</label>
						<select asp-for="Role"
								class="form-control">
							@foreach (var role in Enum.GetValues(typeof(Role)))
							{
								<option>
									@role
								</option>
							}
						</select>
					</div>
					<div class="form-group animated fadeInRight">
						<label asp-for="State">
						</label>
						<select asp-for="State"
								class="form-control">
							@foreach (var state in Enum.GetValues(typeof(AccountState)))
							{
								<option>
									@state
								</option>
							}
						</select>
					</div>
				}
				<div class="form-group animated fadeInLeft">
					<input type="submit"
						   class="btn btn-group-sm btn-primary pull-right"
						   value="Edit" />
				</div>
			</div>
		</form>
	</div>
}
else
{
	<div class="row">
		<div class="col-md-4">
			<div class="form-group animated fadeIn">
				<label asp-for="Username">
				</label>
				<input asp-for="Username" 
					   disabled class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Email">
				</label>
				<input asp-for="Email" 
					   disabled 
					   class="form-control" />
			</div>
			<div class="form-group animated fadeIn">
				<label asp-for="FirstName">
				</label>
				<input asp-for="FirstName" 
					   disabled 
					   class="form-control" />
			</div>
			<div class="form-group animated fadeIn">
				<label asp-for="LastName">
				</label>
				<input asp-for="LastName" 
					   disabled 
					   class="form-control" />
			</div>
			<div class="form-group animated fadeIn">
				<label asp-for="Role">
				</label>
				<input asp-for="Role" 
					   disabled 
					   class="form-control" />
			</div>
		</div>
	</div>
}

