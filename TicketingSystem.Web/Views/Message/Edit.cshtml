@model EditMessageViewModel
@{
	ViewData["Title"] = "Edit Message";
}

<h2 class="animated fadeInLeft">@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-6">
		<div class="widget-area no-padding blank">
			<div class="status-upload animated fadeInRight">
				<br />
				<form method="post" action="/Message/Edit/@Model.Id">
					<textarea asp-for="MessageContent"
							  rows="5"
							  class="form-control"
							  placeholder="Enter a message."></textarea>
					<input type="submit"
						   value="Edit"
						   class="btn btn-primary green pull-right ticket-button-margin body" />
				</form>
			</div>
		</div>
	</div>
</div>