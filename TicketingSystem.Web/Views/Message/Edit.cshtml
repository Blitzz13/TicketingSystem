@model EditMessageViewModel
@{
	ViewData["Title"] = "Edit Message";
}

<h2 class="animated fadeInLeft">@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-6">
		<div class="widget-area no-padding blank">
			<div class="status-upload animated fadeInRight">
				<br />
				<form method="post" action="/Message/Edit/@Model.Id">
					<textarea asp-for="MessageContent" placeholder="What are you doing right now?"></textarea>
					<input type="submit" style="margin-right: 12px; margin-top: 5px; margin-bottom: 5px" value="Edit" class="btn btn-primary green pull-right" />
				</form>
			</div>
		</div>
	</div>
</div>